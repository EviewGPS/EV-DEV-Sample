<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    tools:context=".MainActivity">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="V1.5"
            android:textColor="#FF0000" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/shutdown"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Shutdown" />

            <Button
                android:id="@+id/trigger_connect"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/start_hrs"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Start HR" />

            <Button
                android:id="@+id/stop_hrs"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Stop HR" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/enable_gesture"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Gesture Enable" />

            <Button
                android:id="@+id/disable_gesture"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Disable" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_falldown"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Fall update" />

            <Button
                android:id="@+id/query_falldown"
                android:layout_width="227px"
                android:layout_height="wrap_content"
                android:text="Fall Query" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_tilt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilt update" />

            <Button
                android:id="@+id/query_tilt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilt Query" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_motion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion update" />

            <Button
                android:id="@+id/query_motion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Query" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_nomotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoMotion update" />

            <Button
                android:id="@+id/query_nomotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoMotion Query" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_off_ecare_led"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED Off eCare" />

            <Button
                android:id="@+id/set_led_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED Set" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HR:Unknown"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txt_step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Step:Unknown"
            android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
